<div class="container" ng-app="incidentApp" ng-controller="IncidentController">
    <h1>Incident Report</h1>
    <div class="row">
        <div class="col-xs-12">
            <textarea rows="4" class="form-control" placeholder="Describe the incident"></textarea>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <input type="text" class="form-control" placeholder="Location of the incident" />
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <select class="form-control"> </select>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-6">
            <label class="form-control">Currently Active:<input type="checkbox"/></label>
        </div>
        <div class="col-xs-6">
            <label class="form-control" >Add Log:<input type="checkbox" ng-model="someboolean"/></label>
        </div>
    </div>
    <div class="row" ng-show="someboolean">
        <div class="col-xs-12">
            <input type="text" class="form-control" placeholder="Log"/>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
         <button class="btn btn-success form-control">Send Incident Report</button>
        </div>
    </div>
</div>